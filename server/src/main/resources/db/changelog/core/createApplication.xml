<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="table_application_seq_create" author="andras.szabo">
        <createSequence cycle="false" incrementBy="1" sequenceName="SEQ_APPLICATION_TABLE" startValue="5"/>
    </changeSet>
    <changeSet id="create_application_table" author="andras.szabo">
        <createTable tableName="application">
            <column name="id" type="bigint" defaultValueComputed="nextval('SEQ_APPLICATION_TABLE')">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="username" type="varchar(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
